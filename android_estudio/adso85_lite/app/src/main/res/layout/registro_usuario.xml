<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.RegistroUsuario">

    <TextView
        android:id="@+id/textView"
        android:layout_width="98dp"
        android:layout_height="32dp"
        android:fontFamily="cursive"
        android:text="@string/txtRegistroUsuario"
        android:textAlignment="center"
        android:textSize="30sp"

        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087" />

    <EditText
        android:id="@+id/reusuario"
        android:layout_width="267dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="Digite Usuario"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.127" />

    <EditText
        android:id="@+id/recontrasena"
        android:layout_width="263dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Digite Contraseña"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reusuario"
        app:layout_constraintVertical_bias="0.038" />


    <EditText
        android:id="@+id/recontrasenav"
        android:layout_width="261dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Verificar Contraseña"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recontrasena"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/refeccreacion"
        android:layout_width="259dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Digite Fecha Creación"
        android:inputType="date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recontrasenav"
        app:layout_constraintVertical_bias="0.074" />


    <Spinner
        android:id="@+id/rsestado"
        android:layout_width="259dp"
        android:layout_height="52dp"
        android:entries="@array/rs_estado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/refeccreacion"
        app:layout_constraintVertical_bias="0.111" />


    <Spinner
        android:id="@+id/rsrol"
        android:layout_width="267dp"
        android:layout_height="48dp"
        android:layout_marginBottom="112dp"
        android:entries="@array/rs_rol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rsestado"
        app:layout_constraintVertical_bias="0.394" />


    <Button
        android:id="@+id/rbguardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:onClick="rbguardarusu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904" />

</androidx.constraintlayout.widget.ConstraintLayout>